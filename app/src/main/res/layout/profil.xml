<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksandbold"
        android:text="Profil"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="34dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/tulisan"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="347dp"
        android:layout_height="104dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="-95dp"
        android:outlineSpotShadowColor="@color/tulisan"
        android:backgroundTint="@color/background"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:scaleType="centerInside">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/iconPengguna"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/icon_user"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/namaPengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Putri Lestari"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/tulisan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="putrilestari@gmail.com"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/quicksandregular"
                android:textColor="@color/tulisan"
                android:layout_marginLeft="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nama Pengguna -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Diri Pengguna"
        android:fontFamily="@font/quicksandbold"
        android:textSize="18sp"
        android:textColor="@color/tulisan"
        android:layout_marginLeft="-347dp"
        android:layout_marginTop="200dp"/>

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-170dp"
        android:layout_marginTop="255dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="240dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandregular"/>
    <TextView
        android:id="@+id/namaPengguna2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Putri Lestari"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="240dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"/>

    <!-- Alamat Email -->
    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-352dp"
        android:layout_marginTop="295dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/quicksandregular"
        android:text="Alamat Email"
        android:textColor="@color/tulisan" />

    <TextView
        android:id="@+id/emailPengguna"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:text="putrilestari@gmail.com"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="280dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="14sp"/>

    <!-- No Hp -->
    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-354dp"
        android:layout_marginTop="335dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/quicksandregular"
        android:text="No. Hp"
        android:textColor="@color/tulisan" />

    <TextView
        android:id="@+id/noHpPengguna"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="+62 812 7606 5321"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="320dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="14sp"/>

    <!-- Nama Suami -->
    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="375dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-348dp"
        android:layout_marginTop="357dp"
        android:fontFamily="@font/quicksandregular"
        android:text="Nama Suami"
        android:textColor="@color/tulisan" />

    <TextView
        android:id="@+id/namaSuami"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="Khairul Mbappe"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="357dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="14sp"/>

    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="410dp"
        android:background="#F4DDD5" />

    <!-- Alamat Rumah -->
    <com.google.android.material.internal.BaselineLayout
        android:layout_width="347dp"
        android:layout_height="1dp"
        android:layout_marginLeft="-345dp"
        android:layout_marginTop="450dp"
        android:background="#F4DDD5" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-348dp"
        android:layout_marginTop="395dp"
        android:fontFamily="@font/quicksandregular"
        android:text="Alamat Rumah"
        android:textColor="@color/tulisan" />

    <TextView
        android:id="@+id/alamatRumah"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Jalan Umban Sari No. 1"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="395dp"
        android:textColor="@color/tulisan"
        android:fontFamily="@font/quicksandmedium"
        android:textSize="14sp"/>

    <!-- NavBar -->
    <ImageView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="-380dp"
        android:src="@drawable/kotaknavbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="676dp"
            android:layout_marginLeft="-385dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_home"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btn_lapor"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="676dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_lapor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_artikel"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="676dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_artikel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_tentang"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="676dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_tentang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_profil"
            android:layout_width="35dp"
            android:layout_height="48dp"
            android:layout_marginTop="676dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/button"
            android:src="@drawable/navbar_profil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>